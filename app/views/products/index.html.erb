<div class="container-md mt-3 d-flex justify-content-center">
  <table class="table col-md-8">
    <tbody>
      <% @my_products.each do |product| %>
        <tr class="row border-bottom-dark border-top-dark">
          <td class="d-inline col-8 d-flex justify-content-center">
            <% product.images.each do |image| %>
              <%= image_tag image.variant(resize: '200x200').processed %>
            <% end %>
          </td> 
          <td class="col-4 d-flex align-content-between flex-wrap">
            <div>
              <h4 class="card-text"><%= product.book.title %></h4>
              <h5 class="card-text"><%= product.book.author %></h5>
              <h5 class="card-text"><%= product.editorial %></h5>
              <h6 class="card-text">$<%= product.price.to_s.reverse.scan(/.{1,3}/).join('.').reverse %></h6>
              <h6 class="card-text"><%= product.condition.humanize %></h6>
              <h6 class="card-text"><%= product.status.humanize %></h6>
            </div>
            <div>
              <%= link_to 'Ver mensajes', root_path, class: 'text-decoration-none text-dark' %> | 
              <%= link_to 'Editar', edit_book_product_path(product.book, product), class: 'text-decoration-none text-dark' %> | 
              <%= link_to 'Eliminar', book_product_path(product.book.id, product), method: :delete, data: { confirm: '¿Estás seguro de querer eliminar este registro?' }, class: 'text-decoration-none text-dark' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
