<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @my_products.each do |product| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm text-center">
            
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                        <div class="carousel-item active">
                            <%= image_tag product.images.first.variant(resize: '500 x 300').processed %>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag product.images.second.variant(resize: '500 x 300').processed %>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag product.images.third.variant(resize: '500 x 300').processed %>
                        </div>
                </div>
                <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </button>
            </div>            
            <div class="card-body">
              <h5 class="card-text"><%= product.book.title %></h5>
              <h5 class="card-text"><%= product.book.author %></h5>
              <h5 class="card-text"><%= product.editorial %></h5>
              <h5 class="card-text"><%= product.book.course %></h5>
              <h5 class="card-text">$<%= product.price/1000 %>.<%= product.price%1000 == 0 ? "000" : product.price%1000 %></h5>
              <p class="card-text"><%= product.condition.humanize %></p>
              <p class="card-text"><%= product.status.humanize %></p>
              <%#= link_to 'Ver mensajes', book_product_message_path(product.book, product), class: 'btn btn-success text-white' %>
              <%= link_to 'Editar', edit_book_product_path(product.book.id, product), class: 'btn btn-primary btn-block' %>
              <%= link_to 'Eliminar', book_product_path(product.book.id, product), method: :delete, data: { confirm: '¿Estás seguro de querer eliminar este registro?' }, class: 'btn btn-danger btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
