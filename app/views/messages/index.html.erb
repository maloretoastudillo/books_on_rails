<h1>Casilla de mensajes</h1>


<table class="table table-hover">
  <tbody>
    <% @my_messages.each do |message| %>
    <tr>
      <th scope="row"><%= if message.sender = current_user ? message.recipient.full_name : message.sender.full_name %></th>
      <td>message.book</td>
      <td>message.created_at</td>
      <td>@mdo</td>
    </tr>
  </tbody>
</table>